# Elasticsearch Configuration
# Copy this file to .env and update with your actual values

# Elasticsearch Connection
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=

# Elastic Cloud Configuration (if using Elastic Cloud)
ELASTIC_CLOUD_ID=
ELASTIC_CLOUD_USERNAME=
ELASTIC_CLOUD_PASSWORD=

# SSL Configuration
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=false
ELASTICSEARCH_SSL_SHOW_WARN=false

# Index Configuration
ELASTICSEARCH_INDEX_NAME=taro_docs
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3

# Search Configuration
ELASTICSEARCH_DEFAULT_SIZE=20
ELASTICSEARCH_MAX_SIZE=100
ELASTICSEARCH_HIGHLIGHT_FRAGMENT_SIZE=150
ELASTICSEARCH_HIGHLIGHT_FRAGMENTS=3

# Development/Debug
DEBUG=false
LOGGING_LEVEL=INFO

# Document Processing
DOCS_DIRECTORY=taro_4_doc/clean_markdown
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Performance Settings
ELASTICSEARCH_REQUEST_TIMEOUT=30
ELASTICSEARCH_RETRY_ON_TIMEOUT=true
ELASTICSEARCH_MAX_RESULT_WINDOW=50000
